<Window x:Class="BizVal.App.Views.HierarchyDefinitionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Define Hierarchy" WindowStyle="ToolWindow" Width="700" Height="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="10" Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Left">Sets:</Label>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="0, 0, 0, 5">
                <TextBox VerticalAlignment="Center" Width="175" HorizontalAlignment="Left" x:Name="NewItem"></TextBox>
                <Button x:Name="AddSet" Width="50" VerticalAlignment="Center" Margin="5,0,0,0">Add</Button>
            </StackPanel>
            <ListBox SelectionMode="Single" Grid.Row="2" Grid.Column="0" ItemsSource="{Binding Path=Hierarchy.Levels, Mode=TwoWay}" SelectedItem="{Binding SelectedSet, Mode=TwoWay}" VerticalAlignment="Stretch" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding SetName}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="2">
                <Button Content="Up" Height="25" Width="50" Margin="5" x:Name="UpSet"/>
                <Button Content="Down" Height="25" Width="50" Margin="5" x:Name="DownSet"/>
                <Button Content="Delete" Height="25" Width="50" Margin="5" x:Name="DeleteSet"/>
            </StackPanel>
        </Grid>

        <Grid Margin="10" Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label  Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Left">Labels</Label>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="0,0,0,5">
                <TextBox VerticalAlignment="Center" Width="175" HorizontalAlignment="Stretch" x:Name="NewLabel"></TextBox>
                <Button x:Name="AddLabel" Width="50" VerticalAlignment="Center" Margin="5,0,0,0">Add</Button>
            </StackPanel>
            <ListBox SelectionMode="Single" Grid.Row="2" Grid.Column="0" ItemsSource="{Binding Path=SelectedSet.Labels}" VerticalAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="2">
                <Button Content="Up" Height="25" Width="50" Margin="5" x:Name="UpLabel"/>
                <Button Content="Down" Height="25" Width="50" Margin="5" x:Name="DownLabel"/>
                <Button Content="Delete" Height="25" Width="50" Margin="5" x:Name="DeleteLabel"/>
            </StackPanel>
        </Grid>
        
        <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Width="100" Margin="5" x:Name="Accept">Accept</Button>
        <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Width="100" Margin="5" x:Name="Cancel">Cancel</Button>


    </Grid>
</Window>

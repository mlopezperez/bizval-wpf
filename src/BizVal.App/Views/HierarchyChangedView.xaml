<Window x:Class="BizVal.App.Views.HierarchyChangedView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HierarchyChangedView" Height="150" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" >
                If hierarchy is changed all current valuation data shall be lost.
            </Label>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" >
                Are you sure you want to save your changes?
            </Label>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Width="100" Margin="5" Height="25" x:Name="Accept">Yes</Button>
            <Button Width="100" Margin="5" Height="25" x:Name="Cancel">No</Button>
        </StackPanel>

    </Grid>
</Window>
